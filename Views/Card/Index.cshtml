@model netcoreapp.Models.CreditCardViewModel
@{
    ViewData["Title"] = "Index";
}

<form method="post" action="/Card/Index">
    <br />
    <div class="row">
        <div class="col-md-2">
            <label>Customer</label>
        </div>

        <div class="col-md-2">
            <label>Total Assets</label>

        </div>
        <div class="col-md-2">
            <label>Solicitation Preference</label>

        </div>
        <div class="col-md-2">
            <label>Replacement Card</label>

        </div>
    </div>
    <div class="row">
        <div class="col-md-2">

            @Html.DisplayFor(x => x.CustomerName)
        </div>
        <div class="col-md-2">

            @Html.DisplayFor(x => x.TotalAssets)
        </div>
        <div class="col-md-2">

            @Html.DisplayFor(x => x.SolicitationPre)
        </div>
        <div class="col-md-2">

            @Html.DisplayFor(x => x.CardNumber)
        </div>
    </div>
    <h4>Although the customer will not receive their new card for several days, they will still have the ability to use their digital wallet.</h4>
    <h4>Confirm address for the shipping replacement card</h4>
    <br />
    @Html.DisplayFor(x => x.SelectedAddress)
    @foreach (var item in Model.Addresses)
    {       
        <div><label>@Html.RadioButtonFor(m => @item.IsSelected, item.IsSelected)@item.MailingAddress</label></div>

    }
    <label>To Ship to an alternative address, enter a One time address</label>
    <br />
    @Html.ActionLink("Back", "BackToPrev", "Card", null, new { @class = "btn btn-primary btn-large" })
    @Html.ActionLink("Continue", "Shipping", "Card", null, new { @class = "btn btn-primary btn-large" })

</form>
