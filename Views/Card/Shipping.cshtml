@model netcoreapp.Models.CreditCardViewModel
<h3>Shipping</h3>
<div><label>@Html.RadioButtonFor(x=>x.IsDeliveryStandard, "")Standard(Free)</label>
    Cards are delivered in 7-10 calendar days. The customer would receive their card by May 15th.
    Signature is not required. Shipping outside the united states may require additional 1-3 business days.
    </div>
<div>
    <label>@Html.RadioButtonFor(x => x.IsDeliveryStandard, "")Rush($16.00)</label>
    Cards are delivered in 1-2 business days. The customer would receive their card by May 4th.
    Signature is not required except for deliveries to the bank. Shipping outside the united states may require additional 1-3 business days.
</div>
@Html.ActionLink("Back", "Index", "Card", null, new { @class = "btn btn-primary btn-large" })
@Html.ActionLink("Continue", "Confirmation", "Card", null, new { @class = "btn btn-primary btn-large" })




